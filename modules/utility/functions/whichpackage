#
# Search to which package a particular file or command belongs
#
# Authors:
#   Tobias Wohlfarth <tobias.wohlfarth@googlemail.com>
#

function whichpackage() {
	if [ $# -eq 0 ]; then
		return
	fi
	
	for argument in "$@"; do
		pattern="${argument}"
		if [ ! -e "${argument}" ];
		then
			pattern=$(whereis -b -B $path -f "${argument}" | sed 's/.*: //')
			if [ $? -ne 0 ];
			then
				return
			fi
		fi
		dpkg -S "$pattern"
	done
}

whichpackage "$@"
